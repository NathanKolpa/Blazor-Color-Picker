@page "/"

<h1>Hello, world!</h1>


<button class="btn btn-primary" @onclick="OpenModal">Show Modal</button>



<div style="background-color:@couleur;width:75px;height:75px;">
</div>

<ColorPicker Title="My Blazor ColorPicker" IsOpened="isOpened" Closed="ClosedEvent" MyColor="@couleur">

</ColorPicker>

@code {
    bool isOpened = false;
    string couleur = "#F1F7E9";

    void OpenModal()
    {
        isOpened = true;
    }

    void ClosedEvent(string value)
    {
        couleur = value;
        isOpened = false;
    }
}
